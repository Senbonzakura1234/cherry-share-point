{
	"compilerOptions": {
		"target": "es2015",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"noUncheckedIndexedAccess": true,
		"checkJs": true
	},
	"include": [
		"next-env.d.ts",
		"next-auth.d.ts",
		"global.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"tailwind.config.cjs",
		"next.config.mjs"
	],
	"exclude": ["node_modules"]
}
